n = int(input("Enter number of rows:"))
k=0
for i in range(n):
  k=k+i
m=n+k;                                                # m for finding start value
for i in range(n):                                    # 5 rows
  for j in range(i+1):                                #  this loop for coloumns
    print(format(m,"<3"),end=" ")
    m=m-1
  print()                                              #to print in new line for each row
