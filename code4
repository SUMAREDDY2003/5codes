def add():
    a=int(input("enter a number"))
    b=int(input("enter another number"))
    op=input("enter operator:(+,-)")
    if op=='+':
        print(a+b)
    elif op=='-':
        print(a-b)
    else:
        print("invalid")
add()                                        #we can call function at n times and this is zero argument function
